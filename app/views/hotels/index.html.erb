<%content_for :head do%>
	<%=stylesheet_link_tag "lista_hoteis"%>
<%end%>

<div id="Boxcenter">
           <%=render :file => "/layouts/_top.html.erb"%>
           <div id="Vazia"></div>
            <div id="Bottomboxchoteis">
            	<h1 class="Titlista">LISTA DE HOTEIS</h1> 
				<%if current_user%>
					<%=link_to "+ adicionar novo", new_hotel_path%>
                <%end%>

				<%@hotels.each do |h|%>
				<div id="Boxlista">
                    <p>
						<%if current_user%>
							<%=link_to "Excluir", h, :confirm => 'Confirme a exclusão do hotel.', :method => :delete%> | 
						<%end%>
						<b><%=h.nome%></b> | Tel: <%=h.telefone%> | Endereço: <%=link_to h.site, h.site, :target => "_blank"%> 
					</p>
                </div>
				<%end%>
            </div>
        </div>